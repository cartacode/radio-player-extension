{
  "name": "One Sream Player",
  "description": "Chrome Extension for One stream player",
  "version": "0.3",
  "permissions": [
    "tabs",
    "activeTab",
    "declarativeContent",
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus"
  ],
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "page_action": {
    "default_popup": "tabs_api.html"
  },
  "content_scripts": [
    {
      "matches": ["http://www.google.com/*"],
      "js": ["js/jquery3.min.js", "tabs_api.js"],
      "run_at": "document_start"
    }
  ],
  "offline_enabled": true,
  "manifest_version": 2
}
